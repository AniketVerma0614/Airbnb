<% layout("/layouts/boilerplate") %>
<div class="row mt-3 justify-content-center">
    <div class="col-md-8">
        <body>
            <h3 class="mb-4">Listing Details</h3>
            <div class="card border-0">
                <img src="<%= listing.image %>" class="img-fluid show-img" alt="listing_image">
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b><br>
                        <span><%= listing.description %></span><br>
                        <span class="text-success">&#8377;<%= listing.price.toLocaleString("en-IN") %></span><br>
                        <span><%= listing.location %></span><br>
                        <span><%= listing.country %></span><br>
                    </p>
                </div>
            </div>
            <div class="d-flex justify-content-start gap-3 mt-3">
                <a href="/listings/<%= listing.id %>/edit" class="btn btn-danger edit-btn">Edit</a>
                <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE">
                    <button class="btn btn-dark delete-btn">Delete</button>
                </form>
            </div>
        </body>
    </div>
</div>